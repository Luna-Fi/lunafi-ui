{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "lib": [ "es2015", "dom" ],
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
        "@/styles/*": [
            "./src/styles/*"
        ],
        "@/img/*": [
            "./static/img/*"
        ],
    }
  },
  "include": ["src", "webpack.config.js", "config.js", "src/global.d.ts"],
  "exclude": ["node_modules", "dist"],
}